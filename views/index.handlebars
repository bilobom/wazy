

  <div class="row">
    <div class="d-none d-sm-block col highlight-white">
    <!-- side panel does here -->
    <div class="col">

    <div id="video">
      <div class="panel panel-default">
        <div class="panel-heading rounded">
          <h3 class="panel-title">Video
          <div class="pull-right">
            <select class="form-control-sm" id="select-codec">
            <option value="vp8">VP8</option>
            <option value="vp9">VP9</option>
            <option value="h264">H264</option>
            </select>
            <select class="form-control-sm" id="select-resolution">
            <option value="full-hd">Full HD</option>
            <option value="Hd">HD</option>
            <option value="default">Default</option>
            </select>
            <input type="text" id="room-id" placeholder="room" autocorrect=off autocapitalize=off size=7>
            <input type="password" placeholder="password" id="room-password" size=7>
            <button type="button" id="open-room" class="btn btn-success">Meet</button>
            <button type="button" id="leave-room" class="btn btn-secondary">Leave</button>
          </div>
        </div>
          <div class="panel-body">
            <div class="local-video-wrap">
              <div class="local-video" id="local-vid"></div>
            </div>
            <div class="remote-video-wrap">
              <div class="remote-video" id="remote-vid"></div>
            </div>
          </div>
      </div>
    </div>


    <div id="messages">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3 class="panel-title">Conversation</h3>
          </div>
          <ul class="list-group" >
              <li class="list-group-item">
                  <div class="input-group">
                    <span class="input-group-btn">
                      <button class="btn btn-default direct-user"  type="button">@</button>
                    </span>
                    <input type="text" class="form-control message-text" id="input-text" autocomplete="on" placeholder="Type your message here" />
                    <span class="input-group-btn">
                      <button class="btn btn-default" id="sendMessage">Send!</button>
                    </span>
                  </div>
              </li>
          </ul>
        </div>
    </div>


    </div>
</div>
</div>


